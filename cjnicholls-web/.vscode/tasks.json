{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        
        {
            "label": "dev-run",
            "command": "ng",
            "type": "shell",
            "args": ["serve", "-o", "--host", "0.0.0.0"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": "build" ,
        },
        {
            "label": "prod-build",
            "command": "ng",
            "type": "shell",
            "args": ["build", "--prod", "--build-optimizer"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "run-tests",
            "command": "ng",
            "type": "shell",
            "args": ["test", "--code-coverage"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
    ]
}