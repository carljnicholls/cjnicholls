{
    // Workbench
    "workbench.colorCustomizations": {
        "activityBar.background": "#caafe8",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#ad6c32",
        "activityBarBadge.foreground": "#e7e7e7",
        "titleBar.activeBackground": "#b087dd",
        "titleBar.inactiveBackground": "#b087dd99",
        "titleBar.activeForeground": "#15202b",
        "titleBar.inactiveForeground": "#15202b99",
        "statusBar.background": "#b087dd",
        "statusBarItem.hoverBackground": "#965fd2",
        "statusBar.foreground": "#15202b"
    },
    "workbench.tree.indent": 16,
    
    // Editor
    // Inline comments color as material theme has them low contrast 
    "editor.tokenColorCustomizations": {
        "textMateRules": [{
            "scope": "comment",
            "settings": {
                "fontStyle": "italic",
                "foreground": "#C69650"
            }
        }]
    },
    "editor.tabSize": 4,

    // GIT
    "git.autofetch": true,

    // TypeScript
    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true
    },

    // Markdown,
    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.renderWhitespace": "all"
    },

    // C Spell
    "cSpell.words": [
        "Linkedin",
        "Nicholls",
        "cjnicholls",
        "codelyzer",
        "devkit",
        "fontawesome",
        "fortawesome",
        "jasminewd",
        "junit",
        "tslib"
    ],
    "cSpell.language": "en,en-GB",
    "peacock.color": "#b087dd"
}